# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
continuation_indent_size = 4
known_third_party = ccxt,click,discord,etherscan,freqtrade,flask,matplotlib,numpy,openbb,pandas,pandas_ta,plotly,praw,pydantic,requests,scipy,seaborn,sklearn,sqlalchemy,ta,textblob,tweepy,vadersentiment,websockets

# Configuration files
[*.{json,yaml,yml,toml}]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# HTML, CSS, JavaScript
[*.{html,css,js}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false